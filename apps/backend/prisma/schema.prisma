generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  USER
  ADMIN
}

model Users {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  role      Role     @default(USER)
  images    Images[]
  Book      Book[]
  orders    Order[]
  addresses Address[]
  payments Payment[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Images {
  id             String      @id @default(uuid())
  url            String
  filename       String
  displayOptions Json?
  userId         Int
  user           Users       @relation(fields: [userId], references: [id])
  bookId         Int?
  book           Book?       @relation(fields: [bookId], references: [id])
  bookImages     BookImage[]
  createdAt      DateTime    @default(now())
}

model Book {
  id     Int   @id @default(autoincrement())
  userId Int
  user   Users @relation(fields: [userId], references: [id])
  bookSize String
  coverPhotoUrl String?
  bookTitle String
  displaySettings Json?
  images          Images[] // directly link to Images
  bookImages      BookImage[] // additional metadata for each image
  orderItems  OrderItem[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

