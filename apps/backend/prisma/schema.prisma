model BookImage {
  id      Int    @id @default(autoincrement())
  bookId  Int
  imageId String

  // relations
  book  Book   @relation(fields: [bookId], references: [id])
  image Images @relation(fields: [imageId], references: [id])

  // per-book metadata (editable per book)
  caption   String?
  name      String?
  age       String?
  date      DateTime?
  tags      String?
  pageOrder Int? // for ordering images within a book

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
